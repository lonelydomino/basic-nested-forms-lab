


<%= form_for @recipe do |f| %>
    <%= f.label "Recipe title:" %>
    <%= f.text_field :title %><br>

    <%= f.fields_for :ingredients do |i| %>
        <%= i.label "name:" %>
        <%= i.text_field :name %>

        <%= i.label "quantity:" %>
        <%= i.number_field :quantity %>
    <% end %>
    <%= f.submit %>
<% end %>